---
layout: default
---

<ul class="horse-listings">
  {% for horse in page.available_horses %}
    <li class="listing">
      <p class="callout text--accent">
        {{ horse.name }}{% if horse.price %}{% endif %}
      </p>
      <p class="listing--info subtitle">
        {% if horse.nickname %}
          A.K.A <span class="text--accent">{{ horse.nickname }}</span>{% if horse.description or horse.birthday %},{% endif %}
        {% endif %}
        {% if horse.description %}
          <span class="uppercase">{{ horse.description }}</span>{% if horse.birthday %};{% endif %}
        {% endif %}
        {% if horse.birthday %}
          b.&nbsp;{{ horse.birthday }}
        {% endif %}
      </p>
      {% if horse.price %}
        <p class="listing--row subtitle text--accent">
          {{ horse.price }}
        </p>
      {% endif %}

      {% if horse.image_name %}
        <img src="{{ site.baseurl }}/assets/{{ horse.image_name }}" class="listing--image">
      {% endif %}

      {% if horse.notes %}
        <p class="small-caps">{{ horse.notes }}</p>
      {% endif %}
      {% if horse.sires.size > 0 %}
        <p>
          <span class="small-caps">Sire:</span>
          <span class="quote">{{ horse.sires|join: ', ' }}</span>
        </p>
      {% endif %}
      {% if horse.dames.size > 0 %}
        <p>
          <span class="small-caps">Dame:</span>
          <span class="quote">{{ horse.dames|join: ', ' }}</span>
        </p>
      {% endif %}
      {% if horse.bio %}
        <p>
          <span class="small-caps">Bio:</span>
          <span class="quote">{{ horse.bio }}</span>
        </p>
      {% endif %}
      <a href="mailto:{{ site.email }}" class="btn subtitle">Contact about {{ horse.nickname }}</a>
    </li>
  {% endfor %}
</ul>
